<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rL_ls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lslayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iV_ls_puzzle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:src="@drawable/lspuzzle1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iV_ls_judul"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/iV_ls_puzzle"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:src="@drawable/lsjd114" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iV_ls_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iV_ls_puzzle"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:src="@drawable/lslevel1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/pB_ls"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/iV_ls_level"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:max="100"
                android:minHeight="20dp"
                android:minWidth="480dp"
                android:progress="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tV_lssentuhlayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pB_ls"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sentuh layar.."
                android:textColor="@color/colorAbuSelect"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>