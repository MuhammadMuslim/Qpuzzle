<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lslayout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/bt_spmulaibaru"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="MULAI BARU" />

        <Button
            android:id="@+id/bt_spmelanjutkan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_spmulaibaru"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="MELANJUTKAN" />

        <TextView
            android:id="@+id/tV_spnamapemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_spmelanjutkan"
            android:layout_centerHorizontal="true"
            android:text="ROMADLONI"
            android:textColor="@color/colorAbuSelect"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tV_sppuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tV_spnamapemain"
            android:layout_centerHorizontal="true"
            android:text="PUZZLE 1 : AN-NAS"
            android:textColor="@color/colorAbuSelect"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tV_splevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tV_sppuzzle"
            android:layout_centerHorizontal="true"
            android:text="MUDAH"
            android:textColor="@color/colorAbuSelect"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tV_spnilaiwaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tV_splevel"
            android:layout_centerHorizontal="true"
            android:text="00000 | 00:00:00"
            android:textColor="@color/colorAbuSelect"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_spkembali"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tV_spnilaiwaktu"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="KEMBALI KE MENU" />

        <EditText
            android:id="@+id/eT_spnamapemain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_spkembali"
            android:layout_centerHorizontal="true"
            android:hint="NAMA PEMAIN"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorAbuSelect"
            android:textColorHint="@color/colorAbuSelect" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eT_spnamapemain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/bt_spbatal"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="BATAL" />

            <Button
                android:id="@+id/bt_spmulai"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/bt_spbatal"
                android:text="MULAI" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>