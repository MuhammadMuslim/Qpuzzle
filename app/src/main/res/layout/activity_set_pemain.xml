<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAbu2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="MULAI BARU"
            android:id="@+id/bt_spmulaibaru"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="MELANJUTKAN"
            android:id="@+id/bt_spmelanjutkan"
            android:layout_below="@id/bt_spmulaibaru"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROMADLONI"
            android:textStyle="bold"
            android:textSize="14dp"
            android:id="@+id/tV_spnamapemain"
            android:layout_below="@+id/bt_spmelanjutkan"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUZZLE 1 : AN-NAS"
            android:textStyle="bold"
            android:textSize="12dp"
            android:id="@+id/tV_sppuzzle"
            android:layout_below="@+id/tV_spnamapemain"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUDAH"
            android:textStyle="bold"
            android:textSize="10dp"
            android:id="@+id/tV_splevel"
            android:layout_below="@+id/tV_sppuzzle"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00000 | 00:00:00"
            android:textStyle="bold"
            android:textSize="12dp"
            android:id="@+id/tV_spnilaiwaktu"
            android:layout_below="@+id/tV_splevel"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="KEMBALI KE MENU"
            android:id="@+id/bt_spkembali"
            android:layout_below="@id/tV_spnilaiwaktu"
            android:layout_marginStart="10dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="NAMA PEMAIN"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:layout_below="@id/bt_spkembali"
            android:id="@+id/eT_spnamapemain"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eT_spnamapemain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/relativeLayout">

            <Button
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="BATAL"
                android:id="@+id/bt_spbatal"/>

            <Button
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="MULAI"
                android:id="@+id/bt_spmulai"
                android:layout_toEndOf="@+id/bt_spbatal"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>