<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lslayout">

    <RelativeLayout
        android:id="@+id/rL_npnilaitotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/npnilaitotal">

        <TextView
            android:id="@+id/tV_npnilaitotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0000"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iV_nplevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rL_npnilaitotal"
        android:layout_marginStart="-12dp"
        android:layout_toEndOf="@+id/rL_npnilaitotal"
        android:paddingTop="6dp"
        android:src="@drawable/nplevel1" />

    <ImageView
        android:id="@+id/iV_npsurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rL_npnilaitotal"
        android:layout_marginEnd="-12dp"
        android:layout_toStartOf="@+id/rL_npnilaitotal"
        android:paddingTop="6dp"
        android:src="@drawable/npsurat114" />

    <RelativeLayout
        android:id="@+id/rL_npnilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_npnilaitotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/npnilai"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_npnilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:text="0000"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL_npwaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_npnilai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/npwaktu"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_npwaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:text="00:00"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL_npsalah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_npwaktu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/npsalah"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_npsalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:text="00"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL_npbantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_npsalah"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/npbantuan"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_npbantuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:text="00"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL_npbonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_npbantuan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/npbonus"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_npbonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:text="0000"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL_nptotalnilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_npbonus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/nptotalnilai"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_nptotalnilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:text="00000"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL_nptotalwaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_nptotalnilai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/nptotalwaktu"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tV_nptotalwaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:text="00:00:00"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iV_npselanjutnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_nptotalwaktu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/npselanjutnya" />

    <RelativeLayout
        android:id="@+id/rL_nppuzzlelevelselanjutnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iV_npselanjutnya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/iV_nppuzzleselanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nppuzzleselanjutnya1" />

        <ImageView
            android:id="@+id/iV_nplevelselanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-12dp"
            android:layout_toRightOf="@id/iV_nppuzzleselanjutnya"
            android:src="@drawable/nplevelselanjutnya1" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/iB_nppengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rL_nppuzzlelevelselanjutnya"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/rL_nppuzzlelevelselanjutnya"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/npbuttonpengaturan" />

    <ImageButton
        android:id="@+id/iB_npselanjutnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rL_nppuzzlelevelselanjutnya"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/rL_nppuzzlelevelselanjutnya"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/npbuttonselanjutnya" />

</RelativeLayout>