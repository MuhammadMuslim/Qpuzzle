<com.linearlistview.LinearListView
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/sbbg"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:text="00"
            android:id="@+id/tV_sbnomor"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="MMMMMMMMMM"
            android:id="@+id/tV_sbnama"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tV_sbnomor" />

        <TextView
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:text="00000"
            android:id="@+id/tV_sbnilai"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tV_sbnama" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:text="00:00:00"
            android:id="@+id/tV_sbwaktu"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tV_sbnilai"/>

    </RelativeLayout>
    </com.linearlistview.LinearListView>