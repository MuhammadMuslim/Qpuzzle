<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAbu2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/sbjudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/iV_sbjudul" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/iV_sbjudul"
        android:layout_alignParentStart="true"
        android:id="@+id/rL_sbkiri">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/sbbuttonback"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/iV_sbjudul"
        android:layout_alignParentEnd="true"
        android:id="@+id/rL_sbkanan" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iV_sbjudul"
        android:layout_toEndOf="@+id/rL_sbkiri"
        android:layout_toStartOf="@+id/rL_sbkanan"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <include layout="@layout/scroll_view_nilai"/>
    </LinearLayout>
</RelativeLayout>